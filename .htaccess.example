RewriteEngine On
RewriteBase /

# Error Documents
ErrorDocument 400 /error/400
ErrorDocument 401 /error/401
ErrorDocument 402 /error/402
ErrorDocument 403 /error/403
ErrorDocument 404 /error/404

ErrorDocument 500 /error.php?err_code=500

# Re-routes
RewriteRule ^error/([0-9]+) error.php?err_code=$1 [L,QSA] # Error pages
RewriteRule ^landing index.php [L,QSA] # Landing (Home) Page